<?xml version="1.0" encoding="UTF-8"?>
<thing:thing-descriptions bindingId="tapocamera"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:thing="https://openhab.org/schemas/thing-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/thing-description/v1.0.0 https://openhab.org/schemas/thing-description-1.0.0.xsd">

	<thing-type id="camera">
		<!-- Comment this in for Things which need a Bridge to function.
			<supported-bridge-type-refs>
			<bridge-type-ref id="TapoCameraBridge" />
			</supported-bridge-type-refs>
		-->

		<label>TapoCamera</label>
		<description>Things for TapoCamera Binding</description>

		<channels>
			<channel id="led-status" typeId="led-status"/>

			<channel id="alarm-enabled" typeId="alarm-enabled"/>
			<channel id="alarm-type" typeId="alarm-type"/>
			<channel id="alarm-mode" typeId="alarm-mode"/>
			<channel id="alarm-light-type" typeId="alarm-light-type"/>

			<channel id="motion-detection-enabled" typeId="motion-detection-enabled"/>
			<channel id="motion-detection-sensitivity" typeId="motion-detection-sensitivity"/>
			<channel id="motion-detection-digital-sensitivity" typeId="motion-detection-digital-sensitivity"/>

			<channel id="line-crossing-detection-enabled" typeId="line-crossing-detection-enabled"/>

			<channel id="intrusion-detection-enabled" typeId="intrusion-detection-enabled"/>

			<channel id="people-detection-enabled" typeId="people-detection-enabled"/>
			<channel id="people-detection-sensitivity" typeId="people-detection-sensitivity"/>

			<channel id="manual-alarm" typeId="manual-alarm"/>
		</channels>

		<config-description>
			<parameter name="hostname" type="text" required="true">
				<context>network-address</context>
				<label>Hostname</label>
				<description>Hostname or IP address of the device</description>
			</parameter>
			<parameter name="username" type="text" required="true">
				<label>Username</label>
				<description>Username to access the device</description>
			</parameter>
			<parameter name="password" type="text" required="true">
				<context>password</context>
				<label>Password</label>
				<description>Password to access the device</description>
			</parameter>
			<parameter name="cloudPassword" type="text" required="false">
				<context>password</context>
				<label>Cloud Password</label>
				<description>(Optional) Cloud Password to access the device if password is not working</description>
			</parameter>
			<parameter name="refreshInterval" type="integer" unit="s" min="1">
				<label>Refresh Interval</label>
				<description>Interval the device beign reconnect in sec.</description>
				<default>60</default>
				<advanced>true</advanced>
			</parameter>
			<parameter name="pollingInterval" type="integer" unit="s" min="1">
				<label>Polling Interval</label>
				<description>Interval the device is polled in sec.</description>
				<default>5</default>
				<advanced>true</advanced>
			</parameter>
		</config-description>
	</thing-type>

	<!-- Sample Channel Type -->
	<channel-type id="led-status">
		<item-type>Switch</item-type>
		<label>Led Status</label>
		<description>Led Status</description>
	</channel-type>

	<channel-type id="alarm-enabled">
		<item-type>Switch</item-type>
		<label>Alarm enabled</label>
		<description>Alarm enabled</description>
	</channel-type>

	<channel-type id="alarm-type">
		<item-type>String</item-type>
		<label>Alarm type</label>
		<description>Alarm type</description>
		<state>
			<options>
				<option value="light">Light</option>
				<option value="sound">Sound</option>
				<option value="both">Both</option>
				<option value="off">Off</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="alarm-mode">
		<item-type>String</item-type>
		<label>Alarm Mode</label>
		<description>Alarm Mode</description>
	</channel-type>
	<channel-type id="alarm-light-type">
		<item-type>String</item-type>
		<label>Alarm Light Type</label>
		<description>Alarm Light Type</description>
		<state>
			<options>
				<option value="0">Siren</option>
				<option value="1">Tone</option>
			</options>
		</state>
	</channel-type>

	<channel-type id="line-crossing-detection-enabled">
		<item-type>Switch</item-type>
		<label>LineCrossing Detection enabled</label>
		<description>LineCrossing Detection enabled</description>
	</channel-type>

	<channel-type id="lintrusion-detection-enabled">
		<item-type>Switch</item-type>
		<label>Intrusion Detection enabled</label>
		<description>Intrusion Detection enabled</description>
	</channel-type>

	<channel-type id="motion-detection-enabled">
		<item-type>Switch</item-type>
		<label>Motion Detection enabled</label>
		<description>Motion Detection enabled</description>
	</channel-type>
	<channel-type id="motion-detection-sensitivity">
		<item-type>String</item-type>
		<label>Motion Detection sensitivity</label>
		<description>Motion Detection sensitivity</description>
		<state>
			<options>
				<option value="low">Low</option>
				<option value="medium">Medium</option>
				<option value="high">High</option>
			</options>
		</state>
	</channel-type>
	<channel-type id="motion-detection-digital-sensitivity">
		<item-type>Dimmer</item-type>
		<label>Motion Detection digital sensitivity</label>
		<description>Motion Detection digital sensitivity</description>
		<state pattern="%d %unit%" min="0" max="10" step="1"/>
	</channel-type>

	<channel-type id="people-detection-enabled">
		<item-type>Switch</item-type>
		<label>People Detection enabled</label>
		<description>People Detection enabled</description>
	</channel-type>
	<channel-type id="people-detection-sensitivity">
		<item-type>Dimmer</item-type>
		<label>People Detection sensitivity</label>
		<description>People Detection sensitivity</description>
		<state pattern="%d %unit%" min="0" max="10" step="1"/>
	</channel-type>

	<channel-type id="manual-alarm">
		<item-type>Switch</item-type>
		<label>Manual Alarm</label>
		<description>Manual Alarm</description>
	</channel-type>

</thing:thing-descriptions>
